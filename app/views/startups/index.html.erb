<div class="jumbotron text-center">

  <h1>Built In PHX</h1>

  <p>A directory of tech startups in Phoenix</p>

  <div class="row">
    <% @startups.approved.each do |startup| %>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <%= image_tag startup.company_image(:medium), class: "image-show-page img-reponsive" %>
        <div class="caption">
          <h3><%= startup.name %><h3>
          <p><%= startup.description %></p>
          <p>
            <%= link_to "More Info", startup_path(startup), class: "btn btn-primary" %>
            <%= link_to "Options", root_path, class: "btn btn-default" %>
          </p>
        </div>
      </div>
    </div>
  <% end %>   
  </div>

</div>  